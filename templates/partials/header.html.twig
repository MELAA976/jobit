<header>
	<nav class="navbar navbar-expand-lg bg-body-tertiary nav">
		<div class="container">
			<a class="logo navbar-brand" href="{{ path('app_accueil')}}">
				<i class="logo__sac fa-solid fa-briefcase"></i>MYJOB
			</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" href="#offcanvasExample" aria-controls="offcanvasExample" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="offcanvas offcanvas-end" id="offcanvasExample" tabindex="-1" aria-labelledby="offcanvasExampleLabel">
			<div class="offcanvas-header">
				<h5 class="offcanvas-title" id="offcanvasExampleLabel">MENU</h5>
				<button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
			</div>

			<div class="offcanvas-body">

				<ul class="menu navbar-nav">
					<li class="nav-item">
						<a class="nav-link" href= "{{ path('app_accueil')}}">Accueil</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('app_publica_offre_index')}}">Offres</a>
					</li>
					
						{% if app.user %} 
                    <li class="nav-item">
						<a class="nav-link" href="{{ path('app_user_compte',{'id': app.user.id}) }}">Mon compte</a>
					</li>
					{% endif %}
					{% if app.user and is_granted('ROLE_ADMIN') %} 
                    <li class="nav-item">
						<a class="nav-link" href="{{ path('admin',{'id': app.user.id}) }}">Mon compte admin</a>
					</li>
					{% endif %}
				</ul>
				<div class = "link">
					<button class="link__moon btn">
						<i class="fa-solid fa-moon"></i>
					</button>
					{% if app.user %}
						<a href="{{ path('app_logout')}}">
							<button class="link__connect">Deconnexion</button>
						</a>
						{% else %}
						<a href="{{ path('app_login')}}">
							<button class="link__connect">Connexion</button>
						</a>
					{% endif %}
					
				</div>
			</div>
		</div>
		</div>
		{# <a class="btn" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
					<i class="fa-solid fa-bars"></i>
				</a> #}
	</nav>
</header>
