{% extends 'base.html.twig' %}

{% block title %}PublicaOffre index{% endblock %}

{% block body %}
    <h1>PublicaOffre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Intituler</th>
                <th>Description</th>
                <th>DatePublication</th>
                <th>DateModification</th>
                <th>Lieu</th>
                <th>Duree</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publica_offre in publica_offres %}
            <tr>
                <td>{{ publica_offre.id }}</td>
                <td>{{ publica_offre.intituler }}</td>
                <td>{{ publica_offre.description }}</td>
                <td>{{ publica_offre.datePublication ? publica_offre.datePublication|date('Y-m-d') : '' }}</td>
                <td>{{ publica_offre.dateModification ? publica_offre.dateModification|date('Y-m-d') : '' }}</td>
                <td>{{ publica_offre.lieu }}</td>
                <td>{{ publica_offre.duree }}</td>
                <td>
                    <a href="{{ path('app_publica_offre_show', {'id': publica_offre.id}) }}">show</a>
                    <a href="{{ path('app_publica_offre_edit', {'id': publica_offre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_publica_offre_new') }}">Create new</a>
{% endblock %}
